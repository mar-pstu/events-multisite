			+site( { title: 'CRENG', thumbnail: src.img+'sites/creng.jpg' } )
			+site( { title: 'Конкурс "Энергетика"', thumbnail: src.img+'sites/energy.jpg' } )
			+site( { title: 'Университетский консорциум', thumbnail: src.img+'sites/centreuc.jpg' } )
			+site( { title: 'BioArt', thumbnail: src.img+'sites/bioart.jpg' } )
			+site( { title: 'Tempus Promeng', thumbnail: src.img+'sites/promeng.jpg' } )
			+site( { title: 'DAAD - SSC', thumbnail: src.img+'sites/daad.jpg' } )
			+site( { title: 'Энергетика, єкология и логистика', thumbnail: src.img+'sites/energetika.jpg' } )
