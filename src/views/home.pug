extend layout/_index


block variables
	- page.type = 'front-page';
	- page.title = 'Главная';



mixin site( args )
	.col-xs-12.col-sm-6.col-md-4.col-lg-3: .sites__item.item
		img.thumbnail.lazy( src="#", data-src=args.thumbnail, alt=args.title )
		.wrap
			h3.title: a( href="#" ) #{args.title}
			.overflow
				a.link.link--site( href="#", title="Открыть сайт" ) #[span.sr-only Открыть сайт]
				a.link.link--more( href="#", title="Подробней" ) #[span.sr-only Подробней]



block main
	.sites: .container
		.sites: .row.center-xs
			+site( { title: 'День открытых дверей', thumbnail: src.img+'sites/openday.jpg' } )
